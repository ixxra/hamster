<h2><i class="fi-music"></i> Music folder</h2>
<section>
    {{#each model.dirs}}
        <div class="row">
            <div class="small-1 columns">
                <i class="fi-folder"></i>
            </div>
            <div class="small-11 columns">
                {{#link-to 'track' id}}{{name}}{{/link-to}}
            </div>
            <hr>
        </div>
    {{/each}}

</section>
<section>
    {{#each model.files}}
        <div class="row">
            <div class="small-1 columns">
                <a {{action "add" this}}><i class="fi-plus"></i></a>
            </div>
            <div class="small-11 columns">
                {{name}}
            </div>
            <hr>
        </div>
    {{/each}}

</section>
{{outlet}}
